<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo_app_grabmo" />

    <include
        layout="@layout/include_login"
        android:id="@+id/login_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_app"
        android:visibility="gone"/>

    <include
        layout="@layout/include_signup"
        android:id="@+id/signup_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_app"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="LOGIN"
        android:id="@+id/toggleLogin"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp" />
</RelativeLayout>